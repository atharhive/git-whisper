# Environment variables for Git Whisperer
# Copy this file to .env and fill in your values

# REQUIRED: Gemini API Key - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Configuration (optional - defaults provided)
# MongoDB connection URL
MONGODB_URL=mongodb://localhost:27017/
# Database name
MONGODB_DB=git_whisperer_db
# Collection name for storing project history
MONGODB_COLLECTION=project_history

# MongoDB Authentication (optional - only if using authenticated MongoDB)
# MONGODB_USERNAME=your_mongodb_username
# MONGODB_PASSWORD=your_mongodb_password

# Logging Configuration (optional - defaults to INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
